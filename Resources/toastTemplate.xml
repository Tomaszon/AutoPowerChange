<toast>
	<visual>
		<binding template="ToastGeneric">
			<text hint-maxLines="1">{toastHeader}</text>
			<text>{content}</text>
			<image placement="appLogoOverride" hint-crop="circle" src="{icon}"/>
		</binding>
	</visual>

	<actions>
		<action activationType="background" arguments="dismiss" content="Dismiss" imageUri="{iconFolder}\dismiss.png"/>
		{resolutionButton}
		<action activationType="protocol" arguments="apc://{currentLocation}\Invoke-PowerPlanRestore.ps1 {previousPlanName} {previousPlanGuid}" content="Restore plan" imageUri="{iconFolder}\restore.png"/>
	</actions>
</toast>